{
  "expo": {
    "name": "Reps",
    "slug": "Reps",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "reps",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "././assets/images/growth.png",
      "imageWidth": 200,
      "resizeMode": "contain",
      "backgroundColor": "#000"
    },
    "ios": {
      "bundleIdentifier": "com.shak.reps",
      "supportsTablet": true,
      "infoPlist": {
        "NSMicrophoneUsageDescription": "This app needs access to your microphone to record audio.",
        "NSUserNotificationUsageDescription": "This app needs permission to send you notifications for alarms.",
        "UIBackgroundModes": ["remote-notification"],
      "backgroundColor":"#000"
          }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#000000"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "RECORD_AUDIO",
        "POST_NOTIFICATIONS",
        "VIBRATE",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "WAKE_LOCK"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-audio"
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}